    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/server/",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Agent",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/agent/main.go",
            "env": {
                "dry-run": "true"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}